# =============================================================================
# PROLIFIC EMAIL MARKETING - Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=prolific
POSTGRES_PASSWORD=prolific_dev_password
POSTGRES_DB=prolific_email
DATABASE_URL=postgresql://prolific:prolific_dev_password@postgres:5432/prolific_email?schema=public

# For local development (outside Docker)
# DATABASE_URL=postgresql://prolific:prolific_dev_password@localhost:5432/prolific_email?schema=public

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Security / Encryption
# -----------------------------------------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_string_here_replace_this_with_real_key_abc

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_replace_this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# BullMQ Worker
# -----------------------------------------------------------------------------
WORKER_CONCURRENCY=5

# -----------------------------------------------------------------------------
# Notifications
# -----------------------------------------------------------------------------
# Email (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Prolific Email

# Slack
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# -----------------------------------------------------------------------------
# AI Services (optional - stub for now)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Asset Storage (local filesystem for development)
# -----------------------------------------------------------------------------
ASSET_STORAGE_PATH=./uploads
# For production S3:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=

# -----------------------------------------------------------------------------
# Frontend (Vite - must be prefixed with VITE_)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:4000
VITE_APP_NAME=Prolific Email Marketing

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
